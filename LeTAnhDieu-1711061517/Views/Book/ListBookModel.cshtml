@model IEnumerable<LeTAnhDieu_1711061517.Models.Book>

@{
    ViewBag.Title = "ListBookModel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListBookModel</h2>


<table cellpadding="10" border="1" class="table">
    <thead>
        <tr>
            <th>
                title
            </th>
            <th>
                Author
            </th>
            <th>
                image cover
            </th>
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
   

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
           <img src="@item.Image_cover" width="95" title="cover" /> 
        </td>
        <td>
           <a href="/Book/EditBook/@item.Id" title="EditBook">Edit</a>
        </td>
        <td>
            <a href="/Book/DeleteBook/@item.Id" title="DeleteBook">Delete</a>
        </td>
    </tr>
}

</table>
